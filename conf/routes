# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page

GET     /                                              controllers.HomeController.index

GET     /jogadores/cadastrar                           controllers.HomeController.telaCadastroJogador
GET     /jogadores/listar                              controllers.HomeController.telaListaJogador

GET     /estatisticas/cadastrar                        controllers.HomeController.telaEstatisticasCadastrar
GET     /estatisticas/inicio                           controllers.HomeController.telaEstatisticasInicio

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
