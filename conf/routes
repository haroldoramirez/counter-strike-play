# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page

GET     /                                              controllers.HomeController.index

#Rotas Jogadores
GET     /jogadores/cadastrar                           controllers.JogadorController.telaCadastroJogador(request: Request)
GET     /jogadores/listar                              controllers.JogadorController.telaListaJogador
POST    /jogadores/inserir                             controllers.JogadorController.inserirJogador(request: Request)

GET     /estatisticas/cadastrar                        controllers.HomeController.telaEstatisticasCadastrar
GET     /estatisticas/inicio                           controllers.HomeController.telaEstatisticasInicio

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
